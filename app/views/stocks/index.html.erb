<div class='centered-body'>
  <div class='header'>Stocks</div>
  <div class='card'>
    <table>
      <tr>
        <th>Symbol</th>
        <th>Price</th>
        <th>Company</th>
        <th></th>
      </tr>
      <% @stocks.each do |stock| %>
        <tr>
          <td>
            <%= stock.symbol %>
          </td>
          <td>
            <%= number_to_currency(stock.price, format: '%u %n') %>
          </td>
          <td>
            <%= stock.company %>
          </td>
          <td>
            <%= link_to 'Trade', stock_path(stock), class: 'trade' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
