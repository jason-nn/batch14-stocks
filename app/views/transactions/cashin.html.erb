<div class='centered-body'>
  <%= link_to account_path do %>
    <%= image_tag('back.svg') %>
  <% end %>
  <div class='card flex-column-10px-gap'>
    <div class='header'>Add funds to wallet</div>
    <%= form_with model: @transaction, url: cashin_post_path do |f| %>
      <div class='flex-column-20px-gap'>
        <div class='flex-column-5px-gap'>
          <div>
            <%= f.label :amount %>
            <%= f.number_field :amount, step: 0.01 %>
          </div>
          <% @transaction.errors.full_messages_for(:amount).each do |message| %>
            <div class='error-message'>
              <%= message %>
            </div>
          <% end %>
        </div>
        <div>
          <%= f.submit 'Add funds', class: 'button-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
