<b>Add funds</b>
<br>
<br>
<%= form_with model: @transaction, url: cashin_post_path do |f| %>
  <%= f.label :amount %>
  <br>
  <%= f.number_field :amount %>
  <br>
  <% @transaction.errors.full_messages_for(:amount).each do |message| %>
    <div>
      <%= message %>
    </div>
  <% end %>
  <br>
  <%= f.submit 'Add funds' %>
<% end %>
